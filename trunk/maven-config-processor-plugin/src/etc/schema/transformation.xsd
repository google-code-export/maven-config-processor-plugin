<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<xsd:schema xmlns="http://maven-config-processor-plugin.googlecode.com/schema/transformation"
		xmlns:xsd="http://www.w3.org/2001/XMLSchema"
		targetNamespace="http://maven-config-processor-plugin.googlecode.com/schema/transformation">

	<xsd:import namespace="http://www.w3.org/XML/1998/namespace" />

	<!-- Top-level <processor> tag -->
	<xsd:element name="processor">
		<xsd:annotation>
			<xsd:documentation>
	Root element.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

	<xsd:element name="add">
		<xsd:annotation>
			<xsd:documentation>
	Add a new value to the processed file.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="name" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Name of the property to add to the processed file.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="after" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Name of the property or XPath expression determining the node or XML element attribute
	after which to add the new value.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="before" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Name of the property or XPath expression determining the node or XML element attribute
	before which to add the new value.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="value" type="xsd:string">
					<xsd:annotation>
						<xsd:documentation>
	Value of the property or XML snippet to be added.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="modify">
		<xsd:annotation>
			<xsd:documentation>
	Modify a value of the processed file.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="name" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Name of the property or XPath expression determining the node or XML element attribute
	to modify.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="value" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	New value of the property or XML snippet to replace the existing XML element.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="find" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Regular expression to use to find text fragments in property values and
	comments to replace with the value of the "replace" element.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="replace" type="xsd:string" minOccurs="0">
					<xsd:annotation>
						<xsd:documentation>
	Value used to replace the text fragments found using the regular expression of the
	"find" element.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="remove">
		<xsd:annotation>
			<xsd:documentation>
	Remove a property or XML element of the processed file.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="name" type="xsd:string">
					<xsd:annotation>
						<xsd:documentation>
	Name of the property or XPath expression determining the node or XML element attribute
	to remove.
						</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

</xsd:schema>
